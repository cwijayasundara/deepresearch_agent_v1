name: CI

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  lint:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v5
        with:
          python-version: "{{ python_version | default('3.12') }}"
      - name: Install dependencies
        run: pip install .[dev]
      - name: Ruff check
        run: ruff check src/ tests/
      - name: Custom linters
        run: python3 .claude/linters/lint_all.py
      - name: Type check
        run: mypy src/

  test:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        python-version: ["{{ python_version | default('3.12') }}"]
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v5
        with:
          python-version: ${{ "{{" }} matrix.python-version {{ "}}" }}
      - name: Install dependencies
        run: pip install .[dev]
      - name: Run tests
        run: pytest tests/ --cov=src --cov-report=term-missing --cov-fail-under=80
