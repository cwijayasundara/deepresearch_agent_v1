{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/scripts/pre_write_check.py",
            "timeout": 10000
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/scripts/pre_read_scaffold_guard.py",
            "timeout": 5000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/scripts/post_write_lint.py",
            "timeout": 30000
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/scripts/commit_alignment.py",
            "timeout": 10000
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/scripts/subagent_validate.py",
            "timeout": 10000
          }
        ]
      },
      {
        "matcher": "TeamCreate|TaskCreate|TaskUpdate",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/scripts/team_activity_log.py",
            "timeout": 10000
          }
        ]
      }
    ],
    "TeammateIdle": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/scripts/teammate_idle_check.py",
            "timeout": 15000
          }
        ]
      }
    ],
    "TaskCompleted": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/scripts/task_completed_check.py",
            "timeout": 60000
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/scripts/post_commit_spec_check.py",
            "timeout": 30000
          }
        ]
      }
    ]
  }
}
